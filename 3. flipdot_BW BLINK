#define FLIPDOT_COLS 7
#define FLIPDOT_ROWS 7

#define HEADER_BYTE 0x80
#define CMD_REFRESH 0x85 //refresh C+E
#define END_BYTE 0x8F

// panel's speed setting: 1-OFF 2-ON 3-ON
//#define HEADER_OFFSET 0
//#define CMD_OFFSET 1
//#define PANEL_OFFSET 2
//#define DATA_OFFSET 3
#define PANEL_ADDRESS 1 // panel address: 1 (8 pos dip switch: 1:on 2-8: off)

byte all_bright_CE[] = {0x80, 0x85, 0x01, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F,
                        0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x7F, 0x8F
                       };

byte all_dark_CE[] = {0x80, 0x85, 0x01, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00,
                      0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x8F
                     };

void setup() {
  // put your setup code here, to run once:
  Serial.begin(57600);
}

void loop() {
  // put your main code here, to run repeatedly:
  int delay_tr = 200;
  Serial.write(all_dark_CE, 60);
  delay (delay_tr);
  Serial.write(all_bright_CE, 60);
  delay (delay_tr);
}


